---
import Layout from "@/layouts/Layout.astro";
import PlayListItem from "@/components/PlayListItem.astro";

import { allPlaylists, songs } from "@/lib/data";
import { printArtists } from "@/functions/printArtists";

const { id } = Astro.params;

const playlist = allPlaylists.find((playlist) => playlist.id === id);
const playlistSongs = songs.filter(
  (song) => song.albumId === playlist?.albumId,
);
const durationArray = playlistSongs.map((song) => song.duration);

function durationMinutes(duration: any) {
  const parts = duration.split(":");
  const mins = parseInt(parts[0], 10);
  const secs = parseInt(parts[1], 10);
  return mins + secs / 60;
}

// Sumar todas las duraciones en minutos
const totalMinutes = durationArray.reduce(function (acumulator, duration) {
  return acumulator + durationMinutes(duration);
}, 0);

const totalMinutesParseds = parseFloat(totalMinutes.toFixed(2))

const songWords = playlistSongs.length > 1 ? "songs" : "song";
---

<Layout title="Spotify Clon">
  <div
    id="playlist-container"
    class="relative flex flex-col p-3 bg-[#242424] z-10 overflow-x-hidden"
    transition:name=`playlist ${id} box`
  >
    <header class="flex gap-x-3">
      <picture class="flex-none aspect-square size-52">
        <img
          src={playlist?.cover}
          alt={`Cover of ${playlist?.title}`}
          class="object-cover size-full rounded-md"
          transition:name=`playlist ${playlist?.id} image`
        />
      </picture>
      <div class="flex flex-col justify-between">
        <h2 class="flex flex1 items-end">Playlist</h2>
        <div>
          <h1
            class="title-clamp text-3xl font-bold block"
            transition:name=`playlist ${playlist?.id} title`
          >
            {playlist?.title}
          </h1>
        </div>
        <div class="flex flex-1 items-end">
          <div class="text-sm text-gray-300 font-normal">
            <div transition:name=`playlist ${playlist?.id} artists`>
              <span>{printArtists(playlist?.artists)}</span>
            </div>
            <p>
              <span>{playlistSongs.length} {songWords}</span>,
              <small>{totalMinutesParseds} mins</small>
            </p>
          </div>
        </div>
      </div>
    </header>
    <div class="relative z-10 px-3"></div>
    <div
      class="absolute -z-10 inset-0 bg-gradient-to-t from-[#121212] via-[#121212]/80"
    >
    </div>
  </div>
</Layout>
