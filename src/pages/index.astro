---
import Layout from "@/layouts/Layout.astro";
import PlayListItem from "@/components/PlayListItem.astro";

import { playlists } from "@/lib/data";
---

<Layout title="Spotify Clon">
	<div
		id="playlist-container"
		class="relative transition-all duration-1000 bg-green-600"
	>
		<div class="relative z-10 px-3">
			<h1 class="text-4xl py-6 px-3">¡Buenos días!</h1>
			<div class="flex flex-wrap gap-x-3">
				{playlists.map((playlist) => <PlayListItem playlist={playlist} />)}
			</div>
		</div>
		<div
			class="absolute inset-0 bg-gradient-to-t from-[#121212] via-[#121212]/80"
		>
		</div>
	</div>
</Layout>

<style></style>
