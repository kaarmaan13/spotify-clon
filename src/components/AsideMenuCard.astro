---
import type { Playlist } from "@/lib/data";

import { printArtists } from "@/functions/printArtists";

interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;

const { id, cover, title, artists, color } = playlist;

const artistString = printArtists(artists);
// const artistString = artists.join(', ');
---

<a href={`/playlist/${id}`} class="playlist-item flex gap-x-2 relative p-3 items-center rounded-md hover:bg-[#242424] text-gray-300 hover:text-white transition duration-300">
  <picture class="size-12 flex-none">
    <img
      src={cover}
      alt={`Cover of ${title} by ${artistString}`}
      class="object-cover w-full h-full rounded-md"
    />
  </picture>
  <div class="flex flex-auto flex-col gap-y-1 truncate">
    <h4 class="font-semibold text-sm">{title}</h4>
    <span class="text-xs">{artistString}</span>
  </div>
</a>
