---
import AsideMenuItem from "@/components/AsideMenuItem.astro";
import AsideMenuCard from "@/components/AsideMenuCard.astro";
import LibIcon from "@/icons/Library.astro";
import HomeIcon from "@/icons/Home.astro";
import SearchIcon from "@/icons/Search.astro";

import { playlists } from '@/lib/data'
---

<nav class="flex flex-col flex-1 gap-y-3">
  <div class="bg-[#121212] rounded-lg">
    <ul class="flex flex-col gap-y-1 p-3">
      <AsideMenuItem href="/">
        <HomeIcon />Inicio
      </AsideMenuItem>
      <AsideMenuItem href="#">
        <SearchIcon />Buscar
      </AsideMenuItem>
    </ul>
  </div>
  <div class="bg-[#121212] rounded-lg flex-1">
    <ul class="flex flex-col p-3">
      <AsideMenuItem href="#">
        <LibIcon />Tu Biblioteca
      </AsideMenuItem>

      {
        playlists.map(playlist => <AsideMenuCard playlist={playlist} />)
      }
    </ul>
  </div>
</nav>
