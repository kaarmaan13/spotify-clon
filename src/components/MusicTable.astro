---
import { printArtists } from "@/functions/printArtists";
import Time from "@/icons/Time.astro";
import { type Song } from "@/lib/data";

interface Props {
  songs: Song[];
}

const { songs } = Astro.props;
---

<table class="table-auto text-left min-w-full divide-y divide-gray-500/50">
  <thead>
    <tr class="text-white/70 text-sm">
      <th class="px-4 py-2 font-light">#</th>
      <th class="px-4 py-2 font-light">Title</th>
      <th class="px-4 py-2 font-light">Album</th>
      <th class="px-4 py-2 font-light"><Time /></th>
    </tr>
  </thead>

  <tbody>
    <tr class="h-3"></tr>
    {
      songs.map((song, index) => (
        <tr class="text-white/70 text-sm font-light hover:bg-[#242424] rounded-md overflow-hidden transition duration-300">
          <td class="px-4 py-2 rounded-tl-md rounded-bl-md w-5">{index + 1}</td>
          <td class="px-4 py-2 flex gap-3">
            <picture>
              <img
                src={song.image}
                alt={song.title}
                class="size-10"
              />
            </picture>
            <div class="flex flex-col">
              <h3 class="text-white font-semibold">{song.title}</h3>
              <small>{printArtists(song.artists)}</small>
            </div>
          </td>
          <td class="px-4 py-2">{song.album}</td>
          <td class="px-4 py-2 rounded-tr-md rounded-br-md">{song.duration}</td>
        </tr>
      ))
    }
  </tbody>
</table>
